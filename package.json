{
  "name": "reactflux",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "vite build",
    "dev": "vite",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "prebuild": "node src/scripts/version-info.js",
    "prepare": "husky",
    "preview": "pnpm run build && vite preview"
  },
  "dependencies": {
    "@arco-design/color": "^0.4.0",
