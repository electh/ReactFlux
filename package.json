    "highlight.js": "^11.10.0",
    "html-react-parser": "^5.1.18",
    "littlefoot": "^4.1.2",
    "nanostores": "^0.11.3",
    "node-polyglot": "^2.6.0",
    "ofetch": "^1.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hotkeys-hook": "^4.5.1",
    "react-intersection-observer": "^9.13.1",
